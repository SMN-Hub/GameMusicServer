<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="317.0" prefWidth="266.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.smappz.concurrent.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <TextArea fx:id="infoText" prefHeight="120.0" prefWidth="200.0" />

  <Label fx:id="welcomeText" />
  <Button onAction="#onConnectButtonClick" text="Start" />
   <HBox prefHeight="100.0" prefWidth="200.0" alignment="CENTER_LEFT" spacing="5">
       <Button onAction="#onSend1ButtonClick" text="Send 1" />
       <Button onAction="#onSend2ButtonClick" text="Send 2" />
       <Button onAction="#onSend3ButtonClick" text="Send 3" />
       <Button onAction="#onSpamButtonClick" text="Spam" />
   </HBox>
</VBox>
